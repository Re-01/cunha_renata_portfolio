<div class="container">
  <header>
    <img src="/images/logo_white.svg" alt="logo" id="logo">
    <h2 class="hidden">Nav Header</h2>
    <nav id="main-nav">
      <h2 class="hidden">Main Navigation</h2>
      <div id="menuToggle">
        <input type="checkbox" /> <span class="hamburger line1"></span>
        <span class="hamburger line2"></span>
        <ul id="menu">
          <li>
            <a id="about" class="nav-btn" href="#about-me">About Me</a>
          </li>
          <li>
            <a id="projects" class="nav-btn" href="#portfolio">Portfolio</a>
          </li>
          <li>
            <a id="contact" class="nav-btn" href="#contact-me">Contact</a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="header-text">
